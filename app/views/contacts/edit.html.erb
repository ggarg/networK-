<div class="page-header">
<h1 class="header">
  <h2>Edit <%= @contact.fname %> <%= @contact.lname %>'s Information</h1>
</div>

<form action="/contacts/<%= @contact.id %>/update">

  <div class="form-group">
    <label>First Name</label>
    <input value="<%= @contact.fname %>" name="fname" type="text" class="form-control input-md" placeholder="Enter First Name">
  </div>

  <div class="form-group">
    <label>Last Name</label>
    <input value="<%= @contact.lname %>" name="lname" type:"text" class="form-control input-md" placeholder="Enter Last Name" >
  </div>

  <div class="form-group">
    <label>Email</label>
    <input value="<%= @contact.email %>" name="email" type="text" class="form-control input-md" placeholder="Enter Email Address">
  </div>

  <div class="form-group">
    <label>Phone Number</label>
    <input value="<%= @contact.number %>" name="numer" type="text" class="form-control input-md" placeholder="Enter Phone Number">
  </div>

  <div class="form-group">
    <label>Company Name</label>
    <input value="<%= @contact.company %>" name="company" type="text" class="form-control input-md" placeholder="Enter Company Name (e.g. Google, Kellogg)">
  </div>

<div class="form-group">
    <label>Reminder Date</label>
    <input value="<%= @contact.date %>" name="date" type="date" class="form-control input-md" placeholder="Enter Reminder Date MM/DD/YYYY">
  </div>

<div class="form-group">
    <label>Notes</label>
    <textarea value="<%= @contact.notes %>" name="notes" class="form-control input-md" rows="5" placeholder="Type In Keywords Here!"></textarea>
  </div>

  <button type="submit" class="btn btn-success btn-md">Submit</button>
  or
  <a href="/index">Cancel</a>
</form>
